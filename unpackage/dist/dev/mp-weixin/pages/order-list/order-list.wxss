
.search {
	width: 100%;
	height: 80px;
	background-color: #fefefe;
}
.search-order {
	position: absolute;
	top: 2.5%;
	right: 4%;
	left: 4%;
	border-radius: 50px;
	width: 92%;
	height: 6%;
	background-color: #f8f8fa;
}
.search-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: #f8f8fa;
}
.order-item {
	margin: 20px auto 0px auto;
	background-color: #fefefe;
	height: auto;
	border-radius: 10px;
	width: 80%;
	padding: 15px 0 15px 0;
	box-shadow: 10px 20px 20px -20px #eeeff5;
}
.no-order {
	position: absolute;
	top: 0%;
	height: 88%;
	width: 100%;
}

